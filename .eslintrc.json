{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-shadow": "off",
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "no-unused-vars": ["error"],
         "react/prop-types": ["error", { "ignore": ["navigation"] }],
    "react/jsx-filename-extension": "off",
        "react/jsx-props-no-spreading": "off",
        "react/no-unescaped-entities": 0
  }
}
